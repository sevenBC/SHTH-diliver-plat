<!--pages/user/index.wxml-->
<view class="vertical-container">
  <view class="horize_flex">
    <image class="portrait" mode="widthFix" src="/images/sttu.png"></image>
      <view class='info_box'>
        <button class="name_button" bindtap="click_box">{{user_name}}</button>
        <view class="hrizoe_line"></view>
      </view>      
  </view>


  <view class="address_box">
    <button style="width: 100%; height: 100%;" bindtap="click_box">
      <view style="height: 10%;text-align: left;margin-bottom: 3%;">联系方式:</view>
      <view class="contact_items">{{contact_1}}</view>
      <view class="contact_items">{{contact_2}}</view>
      <view class="contact_items">{{contact_3}}</view>
    </button>
  </view>

  <view class="contact_box">
    <button style="width: 100%; height: 100%;" bindtap="click_box">
      <view style="height: 10%;text-align: left;margin-bottom: 3%;">常用地址:</view>
      <view class="contact_items" style=" height: 12%;">{{address_1}}</view>
      <view class="contact_items" style=" height: 12%;">{{address_2}}</view>
      <view class="contact_items" style=" height: 12%;">{{address_3}}</view>
      <view class="contact_items" style=" height: 12%;">{{address_4}}</view>
      <view class="contact_items" style=" height: 12%;">{{address_5}}</view>

    </button>
  </view>
</view>
