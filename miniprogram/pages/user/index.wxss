/* pages/user/index.wxss */
page{
  background-color: rgb(235, 235, 235);
}

.page_container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.horize_flex{
  height: 20%;
  padding: 1%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: rgb(61, 172, 103);
}

.portrait{
  width: 40%;
  border-radius: 50%;
  overflow: hidden;
  margin: 5%;
  
}

.info_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60%;
  margin-right:10%;
  
}

.name_button{
  padding: 0%;
  font-size: 20pt;
  font-style: normal;
  color: white;
}

.hrizoe_line{
height: 10rpx;
width: 100%;  
border-bottom: 5rpx solid white;
}

.address_box{
  display:flex;
  width: 95%;
  margin: 2.5%;
  border-radius: 10rpx;
  height: 400rpx;
  background-color: white;
}
.contact_box{
  display: flex;
  width: 95%;
  margin: 2.5%;
  border-radius: 10rpx;
  height: 600rpx;
  background-color: white;
}

.button_box{
  margin-left: 10%;
  margin-right: 10%;
  width: 300%;
  height: 100%;
}

.contact_items{
  padding-top: 3%;
  width: 100%;
  height: 20%;
  border-top: 2px solid rgba(196, 196, 196, 0.336);
}

.address_items{
  width: 100%;
  padding-top: 3%;
  border-top: 2px solid rgba(196, 196, 196, 0.336);
}