page{
  background-color: rgb(235, 235, 235);
}

.page_container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.head_title{
  margin-top: 10rpx;
  height: 10%;
  text-align: center;
  font-size: 20pt;
  color: rgba(0, 0, 0, 0.562);
}

.form_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 95%;
  margin: 2.5%;
  padding-top: 2.5%;
  padding-bottom: 2.5%;
  border-radius: 10rpx;
  background-color: white;
}

.contact_form_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 95%;
  margin: 2.5%;
  border-radius: 10rpx;
  height: 400rpx;
  background-color: white;
}

.address_form_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 95%;
  margin: 2.5%;
  border-radius: 10rpx;
  height: 600rpx;
  background-color: white;
}

.contact_items{
  padding-top: 3%;
  width: 100%;
  height: 20%;
  border-top: 2px solid rgba(196, 196, 196, 0.336);
}

.address_items{
  width: 100%;
  padding-top: 3%;
  border-top: 2px solid rgba(196, 196, 196, 0.336);
}

.in_box{
  margin-bottom: 15rpx;
  border-radius: 5rpx;
  padding: 5rpx;
  background-color: rgba(230, 230, 230, 0.452);
}

.sub_button{
  border-radius: 20rpx;
  background-color: green;
}